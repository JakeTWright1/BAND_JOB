            <div class="p-2 card-product-infos">
              <h2><%= band.name %></h2>
              <p class="p-2 card-product-infos text-center">Â£<%= band.price_per_night %></p>
            </div>
            <div class="d-flex flex-column justify-content-center text-center">
              <%= link_to band_path(band), class: "p-2" do %>
              <button type="button" class="btn btn-outline-secondary p-2">View</button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
