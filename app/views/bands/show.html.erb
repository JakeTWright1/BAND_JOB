<div class="banner">
  <div class="banner-inner">
      <div class="band-info-head d-flex">
        <div class="band-image-show">
          <img src="<%= @band.image_url%>" alt="Photo of <%= @band.name %>">
        </div>
        <div class="band-name-show col-sm-6">
          <h1><%= @band.name%></h1>
          <h5>Genre: <%= @band.genre %></h5>
          <h5>Price per night: Â£<%= @band.price_per_night%></h5>
        </div>
      </div>
  </div>
</div>

<div class="container">
  <hr>
  <p class="text-center">SOME INFORMATION ABOUT THE BAND GOES HERE!</p>
  <hr>
  <div class="row">
    <div class="col-6">
      <h5>REVIEWS</h5>
      <hr>
      <h5>UPCOMING SHOWS</h5>
      <hr>
    </div>
    <div class="col-6">
      <h5>BAND INFO AND LINKS</h5>
      <i class="fa-brands fa-facebook"></i>
      <i class="fa-brands fa-instagram"></i>
      <i class="fa-brands fa-soundcloud"></i>
      <hr>
    </div>
  </div>
  <div>
    <h3 class="text-center">BOOKING NOW</h3>
      <div class="text-center">
      <%= link_to "Check Availability", class: 'btn btn-primary text-center' %>
      </div>
    <hr>
  </div>
</div>
